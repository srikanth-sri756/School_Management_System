<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Installment Details - School Management System</title>
  <link rel="stylesheet" href="/css/modern.css">
</head>
<body>
  <%- include('../partials/navbar') %>

  <div class="container">
    <div class="page-header">
      <h2>Installment Payment Plan</h2>
      <a href="/fees" class="btn btn-secondary">← Back to Fees</a>
    </div>

    <!-- Fee Summary Card -->
    <div class="card" style="background: linear-gradient(135deg, rgba(79, 70, 229, 0.05), rgba(124, 58, 237, 0.05)); border-left: 4px solid #4f46e5; margin-bottom: 2rem;">
      <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 2rem;">
        <div>
          <h4 style="color: #6b7280; margin-bottom: 0.5rem; font-size: 0.9rem;">Student</h4>
          <p style="font-size: 1.3rem; font-weight: 700; color: #1f2937;">
            <%= fee.student ? fee.student.firstName + ' ' + fee.student.lastName : 'N/A' %>
          </p>
          <p style="color: #6b7280; font-size: 0.9rem;">
            <%= fee.student && fee.student.class ? fee.student.class.name : 'No Class' %>
          </p>
        </div>
        <div>
          <h4 style="color: #6b7280; margin-bottom: 0.5rem; font-size: 0.9rem;">Fee Term</h4>
          <p style="font-size: 1.3rem; font-weight: 700; color: #1f2937;"><%= fee.term %></p>
        </div>
        <div>
          <h4 style="color: #6b7280; margin-bottom: 0.5rem; font-size: 0.9rem;">Total Amount</h4>
          <p style="font-size: 1.3rem; font-weight: 700; color: #1f2937;">₹<%= fee.amount.toLocaleString('en-IN') %></p>
        </div>
        <div>
          <h4 style="color: #6b7280; margin-bottom: 0.5rem; font-size: 0.9rem;">Total Paid</h4>
          <p style="font-size: 1.3rem; font-weight: 700; color: #10b981;">₹<%= fee.paid.toLocaleString('en-IN') %></p>
        </div>
        <div>
          <h4 style="color: #6b7280; margin-bottom: 0.5rem; font-size: 0.9rem;">Balance</h4>
          <p style="font-size: 1.3rem; font-weight: 700; color: <%= (fee.amount - fee.paid) > 0 ? '#dc2626' : '#10b981' %>;">
            ₹<%= (fee.amount - fee.paid).toLocaleString('en-IN') %>
          </p>
        </div>
      </div>
    </div>

    <!-- Payment Progress -->
    <div class="card" style="margin-bottom: 2rem;">
      <h3 style="margin-bottom: 1.5rem;">Payment Progress</h3>
      <div style="background: #f3f4f6; height: 40px; border-radius: 12px; overflow: hidden; position: relative;">
        <div style="background: linear-gradient(135deg, #10b981, #059669); height: 100%; width: <%= (fee.paid / fee.amount * 100).toFixed(2) %>%; transition: all 0.3s ease; display: flex; align-items: center; justify-content: center; color: white; font-weight: 700; font-size: 0.95rem;">
          <%= (fee.paid / fee.amount * 100).toFixed(1) %>% Paid
        </div>
      </div>
      <div style="display: flex; justify-content: space-between; margin-top: 0.5rem; font-size: 0.85rem; color: #6b7280;">
        <span>₹0</span>
        <span>₹<%= fee.amount.toLocaleString('en-IN') %></span>
      </div>
    </div>

    <!-- Installments Table -->
    <div class="card">
      <h3 style="margin-bottom: 1.5rem;">Installment Schedule (<%= fee.numberOfInstallments %> Installments)</h3>
      
      <div class="table-container">
        <table class="table">
          <thead>
            <tr>
              <th>Installment</th>
              <th>Amount</th>
              <th>Paid Amount</th>
              <th>Balance</th>
              <th>Due Date</th>
              <th>Status</th>
              <th>Paid Date</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% fee.installments.forEach((installment, index) => { 
              const installmentBalance = installment.amount - installment.paidAmount;
              const isOverdue = new Date(installment.dueDate) < new Date() && installment.status !== 'Paid';
              
              let statusColor = '#6b7280';
              let statusBg = '#f3f4f6';
              if (installment.status === 'Paid') {
                statusColor = '#10b981';
                statusBg = '#d1fae5';
              } else if (installment.status === 'Partial') {
                statusColor = '#f59e0b';
                statusBg = '#fef3c7';
              } else if (isOverdue) {
                statusColor = '#dc2626';
                statusBg = '#fee2e2';
              }
            %>
              <tr>
                <td>
                  <strong style="color: #4f46e5; font-size: 1.05rem;">
                    #<%= installment.installmentNumber %>
                  </strong>
                </td>
                <td>
                  <strong>₹<%= installment.amount.toLocaleString('en-IN') %></strong>
                </td>
                <td>
                  <span style="color: #10b981; font-weight: 600;">
                    ₹<%= installment.paidAmount.toLocaleString('en-IN') %>
                  </span>
                </td>
                <td>
                  <strong style="color: <%= installmentBalance > 0 ? '#dc2626' : '#10b981' %>;">
                    ₹<%= installmentBalance.toLocaleString('en-IN') %>
                  </strong>
                </td>
                <td>
                  <%= new Date(installment.dueDate).toLocaleDateString('en-IN', { day: '2-digit', month: 'short', year: 'numeric' }) %>
                  <% if (isOverdue) { %>
                    <br><span style="color: #dc2626; font-size: 0.8rem; font-weight: 600;">⚠️ Overdue</span>
                  <% } %>
                </td>
                <td>
                  <span style="padding: 6px 12px; background-color: <%= statusBg %>; color: <%= statusColor %>; border-radius: 6px; font-size: 0.85rem; font-weight: 600; display: inline-block;">
                    <%= isOverdue && installment.status !== 'Paid' ? 'Overdue' : installment.status %>
                  </span>
                </td>
                <td>
                  <%= installment.paidDate ? new Date(installment.paidDate).toLocaleDateString('en-IN', { day: '2-digit', month: 'short', year: 'numeric' }) : '-' %>
                </td>
                <td>
                  <% if (installment.status !== 'Paid') { %>
                    <button onclick="openPaymentModal('<%= fee._id %>', <%= index %>, <%= installment.amount %>, <%= installment.paidAmount %>)" class="btn btn-sm" style="background: linear-gradient(135deg, #10b981, #059669); color: white;">
                      Pay Now
                    </button>
                  <% } else { %>
                    <span style="color: #10b981; font-weight: 600;">✓ Paid</span>
                  <% } %>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Payment Modal -->
  <div id="paymentModal" style="display: none; position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.5); z-index: 1000; align-items: center; justify-content: center;">
    <div style="background: white; border-radius: 16px; padding: 2rem; max-width: 500px; width: 90%; box-shadow: 0 20px 50px rgba(0,0,0,0.3);">
      <h3 style="margin-bottom: 1.5rem; color: #1f2937;">Record Payment</h3>
      
      <form id="paymentForm" method="POST" action="/fees/<%= fee._id %>/pay-installment">
        <input type="hidden" name="installmentIndex" id="installmentIndex">
        
        <div class="form-group">
          <label>Installment Amount:</label>
          <input type="text" id="installmentAmount" readonly class="form-control" style="background: #f3f4f6;">
        </div>

        <div class="form-group">
          <label>Already Paid:</label>
          <input type="text" id="alreadyPaid" readonly class="form-control" style="background: #f3f4f6;">
        </div>

        <div class="form-group">
          <label>Balance:</label>
          <input type="text" id="balanceAmount" readonly class="form-control" style="background: #fef3c7; font-weight: 700;">
        </div>

        <div class="form-group">
          <label>Payment Amount: *</label>
          <input type="number" name="paymentAmount" id="paymentAmount" class="form-control" min="1" step="0.01" required onchange="validatePayment()">
          <small style="color: #6b7280;">Enter full or partial payment amount</small>
        </div>

        <div class="form-group">
          <label>Payment Date: *</label>
          <input type="date" name="paymentDate" class="form-control" value="<%= new Date().toISOString().split('T')[0] %>" required>
        </div>

        <div class="form-group">
          <label>Payment Notes:</label>
          <textarea name="paymentNotes" class="form-control" rows="2" placeholder="Payment method, transaction ID, etc."></textarea>
        </div>

        <div style="display: flex; gap: 1rem; margin-top: 2rem;">
          <button type="submit" class="btn btn-primary" style="flex: 1;">Record Payment</button>
          <button type="button" onclick="closePaymentModal()" class="btn btn-secondary">Cancel</button>
        </div>
      </form>
    </div>
  </div>

  <script>
    let currentBalance = 0;

    function openPaymentModal(feeId, installmentIndex, amount, paidAmount) {
      const balance = amount - paidAmount;
      currentBalance = balance;
      
      document.getElementById('installmentIndex').value = installmentIndex;
      document.getElementById('installmentAmount').value = '₹' + amount.toLocaleString('en-IN');
      document.getElementById('alreadyPaid').value = '₹' + paidAmount.toLocaleString('en-IN');
      document.getElementById('balanceAmount').value = '₹' + balance.toLocaleString('en-IN');
      document.getElementById('paymentAmount').value = balance;
      document.getElementById('paymentAmount').max = balance;
      
      document.getElementById('paymentModal').style.display = 'flex';
    }

    function closePaymentModal() {
      document.getElementById('paymentModal').style.display = 'none';
      document.getElementById('paymentForm').reset();
    }

    function validatePayment() {
      const paymentAmount = parseFloat(document.getElementById('paymentAmount').value);
      if (paymentAmount > currentBalance) {
        alert('Payment amount cannot exceed balance amount of ₹' + currentBalance.toLocaleString('en-IN'));
        document.getElementById('paymentAmount').value = currentBalance;
      }
    }

    // Close modal on ESC key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        closePaymentModal();
      }
    });

    // Close modal on outside click
    document.getElementById('paymentModal').addEventListener('click', function(e) {
      if (e.target === this) {
        closePaymentModal();
      }
    });
  </script>

  <script src="/js/main.js"></script>
</body>
</html>
