<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Marks Management - Teacher Portal</title>
  <link rel="stylesheet" href="/css/modern.css">
</head>
<body>
  <%- include('../partials/teacher-navbar') %>
  <%- include('../partials/notification') %>

  <div class="container">
    <div class="page-header">
      <h2>Manage Marks - <%= teacher.isClassTeacher ? 'Class Teacher' : (teacher.subject ? teacher.subject.name : 'No Subject Assigned') %></h2>
    </div>

    <% if (!teacher.isClassTeacher) { %>
      <div class="card" style="background: linear-gradient(135deg, #fbbf24, #f59e0b); color: white; margin-bottom: 20px;">
        <h3>ℹ️ Information for Subject Teachers</h3>
        <p style="margin: 10px 0;">You can view marks here, but only <strong>Class Teachers</strong> can add, edit, or delete marks.</p>
        <p style="margin: 10px 0;">If you need to record marks for your subject, please contact the class teacher of the respective class.</p>
      </div>
    <% } %>

    <% if (teacher.isClassTeacher) { %>
    <!-- Add New Marks -->
    <div class="card">
      <h3>Add Student Marks</h3>
      <form method="POST" action="/teacher/marks/add" enctype="multipart/form-data">
        <div class="form-group">
          <label>Subject *</label>
          <select name="subject" required>
            <option value="">Select Subject</option>
            <% subjects.forEach(subject => { %>
              <option value="<%= subject._id %>"><%= subject.name %></option>
            <% }) %>
          </select>
        </div>

        <div class="form-group">
          <label>Student *</label>
          <select name="student" required>
            <option value="">Select Student</option>
            <% students.forEach(student => { %>
              <option value="<%= student._id %>"><%= student.firstName %> <%= student.lastName %> - <%= student.rollNumber %></option>
            <% }) %>
          </select>
        </div>

        <div class="form-group">
          <label>Exam Type</label>
          <select name="examType" required>
            <option value="Unit Test">Unit Test</option>
            <option value="Mid Term">Mid Term</option>
            <option value="Final">Final</option>
            <option value="Assignment">Assignment</option>
            <option value="Quiz">Quiz</option>
          </select>
        </div>

        <div class="form-group">
          <label>Maximum Marks</label>
          <input type="number" name="maxMarks" required min="1" value="100">
        </div>

        <div class="form-group">
          <label>Obtained Marks</label>
          <input type="number" name="obtainedMarks" required min="0">
        </div>

        <div class="form-group">
          <label>Remarks (Optional)</label>
          <textarea name="remarks" rows="3" placeholder="Add any remarks about the performance..."></textarea>
        </div>

        <div class="form-group">
          <label>Answer Sheet (Optional)</label>
          <input type="file" name="answerSheet" accept=".pdf,.jpg,.jpeg,.png,.doc,.docx">
          <small style="color: #9ca3af; display: block; margin-top: 5px;">Upload scanned answer sheet (PDF, Image, or Document - Max 5MB)</small>
        </div>

        <button type="submit" class="btn btn-primary">Add Marks</button>
      </form>
    </div>
    <% } %>

    <!-- View Existing Marks -->
    <div class="card">
      <h3>Recent Marks Entries</h3>
      <% if (marks.length > 0) { %>
        <table class="table">
          <thead>
            <tr>
              <th>Student Name</th>
              <th>Roll Number</th>
              <th>Subject</th>
              <th>Exam Type</th>
              <th>Marks</th>
              <th>Percentage</th>
              <th>Grade</th>
              <th>Date</th>
              <th>Answer Sheet</th>
              <% if (teacher.isClassTeacher) { %>
                <th>Actions</th>
              <% } %>
            </tr>
          </thead>
          <tbody>
            <% marks.forEach(mark => { %>
              <tr id="mark-row-<%= mark._id %>">
                <td><%= mark.student ? (mark.student.firstName + ' ' + mark.student.lastName) : 'Unknown' %></td>
                <td><%= mark.student ? mark.student.rollNumber : '-' %></td>
                <td><%= mark.subject ? mark.subject.name : 'N/A' %></td>
                <td><%= mark.examType %></td>
                <td><%= mark.obtainedMarks %> / <%= mark.maxMarks %></td>
                <td><%= mark.percentage %>%</td>
                <td>
                  <% if (mark.grade) { %>
                    <span style="padding: 4px 8px; border-radius: 4px; font-weight: 600; background: <%= mark.grade.startsWith('A') ? '#10b981' : (mark.grade === 'B' || mark.grade === 'B+' ? '#3b82f6' : (mark.grade === 'C' ? '#fbbf24' : '#ef4444')) %>; color: white;">
                      <%= mark.grade %>
                    </span>
                  <% } else { %>
                    <span style="color: #9ca3af;">N/A</span>
                  <% } %>
                </td>
                <td><%= mark.date ? new Date(mark.date).toLocaleDateString('en-IN') : new Date().toLocaleDateString('en-IN') %></td>
                <td>
                  <% if (mark.answerSheetFile) { %>
                    <a href="/uploads/<%= mark.answerSheetFile %>" target="_blank" class="btn btn-sm" style="background: #8b5cf6; padding: 4px 8px; font-size: 12px;">View</a>
                  <% } else { %>
                    <span style="color: #9ca3af;">No file</span>
                  <% } %>
                </td>
                <% if (teacher.isClassTeacher) { %>
                  <td>
                    <button onclick="editMark('<%= mark._id %>', '<%= mark.student._id %>', '<%= mark.subject._id %>', '<%= mark.examType %>', <%= mark.maxMarks %>, <%= mark.obtainedMarks %>, '<%= mark.remarks || '' %>')" class="btn btn-sm" style="background: #3b82f6; margin-right: 5px;">Edit</button>
                    <form method="POST" action="/teacher/marks/delete/<%= mark._id %>" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this mark entry?');">
                      <button type="submit" class="btn btn-sm" style="background: #ef4444;">Delete</button>
                    </form>
                  </td>
                <% } %>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <p>No marks entries yet.</p>
      <% } %>
    </div>
  </div>

  <!-- Edit Mark Modal -->
  <div id="editModal" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.7); z-index: 10000; justify-content: center; align-items: center;">
    <div class="card" style="width: 90%; max-width: 600px; max-height: 90vh; overflow-y: auto;">
      <h3>Edit Marks</h3>
      <form method="POST" action="/teacher/marks/edit" id="editForm" enctype="multipart/form-data">
        <input type="hidden" name="markId" id="editMarkId">
        
        <div class="form-group">
          <label>Subject</label>
          <select name="subject" id="editSubject" required>
            <% subjects.forEach(subject => { %>
              <option value="<%= subject._id %>"><%= subject.name %></option>
            <% }) %>
          </select>
        </div>

        <div class="form-group">
          <label>Student</label>
          <select name="student" id="editStudent" required disabled style="background: rgba(255,255,255,0.05);">
            <% students.forEach(student => { %>
              <option value="<%= student._id %>"><%= student.firstName %> <%= student.lastName %> - <%= student.rollNumber %></option>
            <% }) %>
          </select>
        </div>

        <div class="form-group">
          <label>Exam Type</label>
          <select name="examType" id="editExamType" required>
            <option value="Unit Test">Unit Test</option>
            <option value="Mid Term">Mid Term</option>
            <option value="Final">Final</option>
            <option value="Assignment">Assignment</option>
            <option value="Quiz">Quiz</option>
          </select>
        </div>

        <div class="form-group">
          <label>Maximum Marks</label>
          <input type="number" name="maxMarks" id="editMaxMarks" required min="1">
        </div>

        <div class="form-group">
          <label>Obtained Marks</label>
          <input type="number" name="obtainedMarks" id="editObtainedMarks" required min="0">
        </div>

        <div class="form-group">
          <label>Remarks (Optional)</label>
          <textarea name="remarks" id="editRemarks" rows="3"></textarea>
        </div>

        <div class="form-group">
          <label>Answer Sheet (Optional)</label>
          <input type="file" name="answerSheet" accept=".pdf,.jpg,.jpeg,.png,.doc,.docx">
          <small style="color: #9ca3af; display: block; margin-top: 5px;">Upload new answer sheet to replace existing (if any)</small>
        </div>

        <div style="display: flex; gap: 10px;">
          <button type="submit" class="btn btn-primary">Update Marks</button>
          <button type="button" onclick="closeEditModal()" class="btn" style="background: #6b7280;">Cancel</button>
        </div>
      </form>
    </div>
  </div>

  <script>
    function editMark(id, studentId, subjectId, examType, maxMarks, obtainedMarks, remarks) {
      document.getElementById('editMarkId').value = id;
      document.getElementById('editStudent').value = studentId;
      document.getElementById('editSubject').value = subjectId;
      document.getElementById('editExamType').value = examType;
      document.getElementById('editMaxMarks').value = maxMarks;
      document.getElementById('editObtainedMarks').value = obtainedMarks;
      document.getElementById('editRemarks').value = remarks;
      document.getElementById('editModal').style.display = 'flex';
    }

    function closeEditModal() {
      document.getElementById('editModal').style.display = 'none';
    }
  </script>

</body>
</html>
