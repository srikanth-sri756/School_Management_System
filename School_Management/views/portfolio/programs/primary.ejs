        .program-hero {
            background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
            color: white;
            padding: 4rem 0;
            margin-bottom: 3rem;
        }
        .program-hero h1 {
            color: white;
            margin-bottom: 1rem;
        }
        .program-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 2rem;
        }
        .feature-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            margin: 3rem 0;
        }
        .feature-card {
