        }
        .feature-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
        }
        .curriculum-section {
            background: #f0f9ff;
            padding: 3rem;
            border-radius: 12px;
            margin: 3rem 0;
        }
        .grade-list {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
            margin-top: 2rem;
        }
        .grade-item {
            background: white;
            padding: 1.5rem;
            border-radius: 8px;
            border-left: 4px solid #2563eb;
        }
        .stats-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 2rem;
            margin: 3rem 0;
            text-align: center;
