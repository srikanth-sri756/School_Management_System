<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Student Remarks - Teacher Portal</title>
  <link rel="stylesheet" href="/css/modern.css">
</head>
<body>
  <%- include('../partials/teacher-navbar') %>
  <%- include('../partials/notification') %>

  <div class="container">
    <div class="page-header">
      <h2>Student Remarks & Feedback</h2>
    </div>

    <!-- Add New Remark -->
    <div class="card">
      <h3>Add New Remark</h3>
      <form method="POST" action="/teacher/remarks/add">
        <div class="form-group">
          <label>Student</label>
          <select name="student" required>
            <option value="">Select Student</option>
            <% students.forEach(student => { %>
              <option value="<%= student._id %>"><%= student.firstName %> <%= student.lastName %> - <%= student.rollNumber %></option>
            <% }) %>
          </select>
        </div>

        <div class="form-group">
          <label>Remark Type</label>
          <select name="type" required>
            <option value="Positive">Positive</option>
            <option value="Negative">Negative</option>
            <option value="Neutral">Neutral</option>
          </select>
        </div>

        <div class="form-group">
          <label>Remark</label>
          <textarea name="remark" rows="4" required placeholder="Enter your feedback or observation"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Add Remark</button>
      </form>
    </div>

    <!-- View Recent Remarks -->
    <div class="card">
      <h3>Recent Remarks</h3>
      <% if (remarks.length > 0) { %>
        <table class="table">
          <thead>
            <tr>
              <th>Date</th>
              <th>Student</th>
              <th>Type</th>
              <th>Remark</th>
              <th>Subject</th>
            </tr>
          </thead>
          <tbody>
            <% remarks.forEach(remark => { %>
              <tr class="remark-<%= remark.type.toLowerCase() %>">
                <td><%= new Date(remark.date).toLocaleDateString() %></td>
                <td><%= remark.student.firstName %> <%= remark.student.lastName %></td>
                <td>
                  <span class="badge badge-<%= remark.type.toLowerCase() %>">
                    <%= remark.type %>
                  </span>
                </td>
                <td><%= remark.remark %></td>
                <td><%= remark.subject.name %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <p>No remarks added yet.</p>
      <% } %>
    </div>
  </div>

  <style>
    .badge {
      padding: 4px 8px;
      border-radius: 4px;
      font-size: 12px;
      font-weight: 600;
    }
    .badge-positive {
      background-color: #10b981;
      color: white;
    }
    .badge-negative {
      background-color: #ef4444;
      color: white;
    }
    .badge-neutral {
      background-color: #6b7280;
      color: white;
    }
    .remark-positive {
      background-color: rgba(16, 185, 129, 0.1);
    }
    .remark-negative {
      background-color: rgba(239, 68, 68, 0.1);
    }
  </style>

</body>
</html>
