<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Teacher Attendance - School Management System</title>
  <link rel="stylesheet" href="/css/modern.css">
</head>
<body>
  <%- include('../partials/navbar') %>

  <div class="container">
    <div class="page-header">
      <h2>Edit Teacher Attendance</h2>
      <a href="/teacher-attendance" class="btn btn-secondary">‚Üê Back</a>
    </div>

    <div class="card">
      <form method="POST" action="/teacher-attendance/edit/<%= attendance._id %>">
        <div class="form-group">
          <label>Teacher:</label>
          <input type="text" class="form-control" value="<%= attendance.teacher.name %>" readonly style="background: #f3f4f6;">
        </div>

        <div class="form-row">
          <div class="form-group">
            <label>Subject:</label>
            <input type="text" class="form-control" value="<%= attendance.teacher.subject ? attendance.teacher.subject.name : 'N/A' %>" readonly style="background: #f3f4f6;">
          </div>
          <div class="form-group">
            <label>Class & Section:</label>
            <input type="text" class="form-control" value="<%= (attendance.teacher.class ? attendance.teacher.class.name : 'N/A') + (attendance.teacher.section ? ' (' + attendance.teacher.section + ')' : '') %>" readonly style="background: #f3f4f6;">
          </div>
        </div>

        <div class="form-row">
          <div class="form-group">
            <label>Date: *</label>
            <input type="date" name="date" class="form-control" value="<%= new Date(attendance.date).toISOString().split('T')[0] %>" required>
          </div>
          <div class="form-group">
            <label>Status: *</label>
            <select name="status" class="form-control" required>
              <option value="Present" <%= attendance.status === 'Present' ? 'selected' : '' %>>Present</option>
              <option value="Absent" <%= attendance.status === 'Absent' ? 'selected' : '' %>>Absent</option>
              <option value="Late" <%= attendance.status === 'Late' ? 'selected' : '' %>>Late</option>
              <option value="Half-Day" <%= attendance.status === 'Half-Day' ? 'selected' : '' %>>Half-Day</option>
              <option value="Leave" <%= attendance.status === 'Leave' ? 'selected' : '' %>>Leave</option>
            </select>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group">
            <label>Check-In Time:</label>
            <input type="time" name="checkIn" class="form-control" value="<%= attendance.checkIn || '' %>">
          </div>
          <div class="form-group">
            <label>Check-Out Time:</label>
            <input type="time" name="checkOut" class="form-control" value="<%= attendance.checkOut || '' %>">
          </div>
        </div>

        <div class="form-group">
          <label>Notes:</label>
          <textarea name="notes" class="form-control" rows="3"><%= attendance.notes || '' %></textarea>
        </div>

        <div class="flex gap-2 mt-3">
          <button type="submit" class="btn btn-primary">Update Attendance</button>
          <a href="/teacher-attendance" class="btn btn-secondary">Cancel</a>
        </div>
      </form>
    </div>
  </div>

  <script src="/js/main.js"></script>
</body>
</html>
